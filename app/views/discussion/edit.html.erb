<div style="width:400px;float:left;">
<% form_for @discussion, :html => { :id => "top_form" } do |f| -%>

<p><%= label_tag 'Discussion title:' %><br/>
<%= f.text_field :title %>
</p>

<p><%= label_tag 'Discussion content:' %><br/>
<%= f.text_area :content, :size => "60 x 20", :class => 'rich_text_editor' %>
</p>

