<p>&nbsp;</p>

<div style="width:400px;float:left;">
<% form_for @discussion, :html => { :multipart => true } do |f| -%>

<p><%= label_tag 'Discussion title:' %><br/>
<%= f.text_field :title %>
</p>

<p><%= label_tag 'Discussion content:' %><br/>
<%= f.text_area :content, :size => "60 x 20", :class => 'rich_text_editor' %>
</p>


<p>
	<% if @discussion.media_content_type %>
		<%= image_tag @this_project.media.url(:small) %>
	<% end %>
	Upload File:<br/>
	<%= f.file_field :media %>
</p>


<p><%= submit_tag 'Update' %></p>
<% end -%>
</div>
