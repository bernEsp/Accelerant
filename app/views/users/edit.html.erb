<% form_for @user do |f| %>
<p>
	Name:<br/>
	<%= f.text_field :name %>
</p>

<p>
	Email Address:<br/>
	<%= f.text_field :email %>
</p>

<p>
	Login Name:<br/>
	<%= f.text_field :login %>
</p>

<p>
	Reset Password:<br/>
	<%= f.password_field :password %>
</p>

<p>
	Confirm Reset Password:<br/>
	<%= f.password_field :password_confirmation %>
</p>

<fieldset style="width:30%;clear:both;">
<legend>User Type</legend>

<p>
	<%= check_box("user", "admin", {}, "true", "false") %>Admin<br/>
	<%= check_box("user", "moderator", {}, "true", "false") %>Moderator<br/>
	<%= check_box("user", "client", {}, "true", "false") %>Client<br/>
	<%= check_box("user", "participant", {}, "true", "false") %>Participant<br/>
</p>

</fieldset>

<p>
	<%= submit_tag 'Update' %>
<p/>

<% end %>