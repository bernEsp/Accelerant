<% form_for @project do |f| -%>

<p><%= label_tag 'Project title:' %><br/>
<%= f.text_field :title %>
</p>

<p><%= label_tag 'Description:' %><br/>
<%= f.text_area :description %>
</p>

<p>
	Client:<br/>
	<%=  select("project", "client_id", User.find(:all, :conditions => { :client => true}).collect {|p| [ p.name, p.id ] }, {:include_blank => 'Select...'}) %>
</p>
  
<p><%= submit_tag 'Enter' %></p>
<% end -%>