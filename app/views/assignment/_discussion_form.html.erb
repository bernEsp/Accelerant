  <!-- Discussion form -->
  <% if self.current_user.moderator? || self.current_user.admin? %>
  <div id="discussion_form" style="margin-left:100px;">
  <% form_for :discussion,
            :html => {:id => "top_form"},
            :url => {:controller => 'discussion', :action => 'create'} do |f|%>
  Discussion Title: <%= f.text_field :title %><br/>
  <%= f.text_area :content, :size => "60x5" %>

			<fieldset style="margin-top:15px;">
				<input id="check_all" name="check_all" type="checkbox" onclick="Form.getInputs('top_form', 'checkbox').each(function(box){box.checked = $('check_all').checked})" /> <strong>Select All</strong><br/><br/>
				<% for participant in @project_members %>
					<%= check_box("comment_assignment", participant.user.id, {}, "#{participant.user.id}") %>  <%= participant.user.name %><br/>
				<% end %>
			</fieldset>
<%= f.hidden_field :project_id, :value => params[:id] %>
  <%= submit_tag "Post Discussion", :style => "margin-right:50px;" %>
  <% end  %>
  </div>
  <% end %>

  <!-- End Discussion Form -->