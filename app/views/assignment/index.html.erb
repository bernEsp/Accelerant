<%= link_to 'Add Assignment', {:controller => 'assignment', :action => 'new'} %>

<table>
  <tr>
	<th>Title</th>
	<th>Description</th>
	<th></th>
	<th></th>
  </tr>

<% for assignment in @assignment %>
  <tr >
